<div class="col-lg-12 col-md-12">
  <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
    <div class="row justify-content-center align-items-center">

      <div class="col-lg-4 col-md-4 col-10">
        <div class="group">
          <div class="input-group">
            <label for="amount" class='title'>Seu dinheiro:</label>
            <input type='number' id='amount' name='amount' placeholder='$' >
          </div>
          <div  class="select-group">
            <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), id: 'source_currency' %>
          </div>
        </div>
      </div>

      <div class="w-200 col-md-2 col-10">
        <div class="converter-group justify-content-center" data-js='reverseCurrency'>
          <svg viewBox="0 0 50 50"
          style="padding: 5px"
          preserveAspectRatio="xMidYMid meet"
          width="50px" height="50px"
          id="converter"
          >
            <style>
              path {
                fill: #eee;
              }
              .converter-group svg:hover path {
                fill: #ddd;
              }
              @media (min-width: 767px) {
                #converter {
                  width: 100%;ddd
                }
              }
            </style>
            <path d="M39.25 36H14.5l8 8H12L0 32l12-12h10.5l-8 8h24.75v8zm-32-28H32l-8-8h10.5l12 12-12 12H24l8-8H7.25V8z"/>
          </svg>
        </div>
      </div>

      <div class="col-lg-4 col-md-4 col-10">
        <div class="group">
          <div class="input-group">
            <label for="result" >Convers√£o: </label>
            <input type='text' id='result' name='result' placeholder='$' readonly>
          </div>
          <div class="select-group">
            <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), id: 'target_currency' %>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>
